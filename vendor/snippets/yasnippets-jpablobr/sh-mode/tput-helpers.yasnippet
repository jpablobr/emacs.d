# -*- mode: snippet -*-
# name: tput-helpers
# --

#!/bin/sh

set -e
exe=$(basename $0)

# Helpers
_print_info() {
    echo "$(tput setaf 2)[I]$(tput op) $1"
}

_print_error() {
    echo "$(tput setaf 1)[E]$(tput op) $1"
}

_print_warning() {
    echo "$(tput setaf 3)[W]$(tput op) $1"
}

_print_help() {
    echo "$(tput setaf 7)[H]$(tput op) $1"
}

_print_section() {
    echo ''; echo "$(tput setaf 5)###$(tput op) $1"; echo ''
}

die() {
    echo 1>&2 "$1"
    exit 1
}

usage() {
    cat 1>&2 <<-USAGE
usage: $exe [OPTIONS] WHAT WITH

Examples:
    # It does something...
    $exe what with

See also:
    bash(1)
USAGE
    exit 1
}

ACKOPTS=
while echo "$1" | grep -q "^-"; do
    ACKOPTS="$ackopts $1"
    shift
done

[ "$#" -lt 2 ] &&  usage

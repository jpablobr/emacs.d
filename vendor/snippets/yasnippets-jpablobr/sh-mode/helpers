# Helpers

# Helpers for printing to `standard output`.
_print_info() {
    printf "$(tput setaf 2)[I]$(tput op) $1"
}

_print_error() {
    printf "$(tput setaf 1)[E]$(tput op) $1"
}

_print_warning() {
    printf "$(tput setaf 3)[W]$(tput op) $1"
}

_print_help() {
    printf "$(tput setaf 7)[H]$(tput op) $1"
}

_print_section() {
    printf "\n$(tput setaf 5)###$(tput op) $1\n"
}

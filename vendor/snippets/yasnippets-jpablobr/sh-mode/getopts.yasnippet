# -*- mode: snippet -*-
# name: getopts
# --

usage () {
	echo "Usage: $(basename $0) [-h | --help] | [ [-i] [-f file] ]"
}

helptext () {

	cat <<EOF

	This program ...

	$(usage)

	Options:

	-h, --help	Display this help message and exit.
	-i		      Interactive mode.
	-f file		  Write output to file, otherwise write
              output to standard output.

EOF
}

if [ "$1" = "--help" ]; then
	helptext
	graceful_exit
fi

while getopts ":hif:" opt; do
	case $opt in
		f )	echo "something todo with -f"
			;;
		i )	echo "something todo with -i"
			;;
		h )	helptext
			graceful_exit
			;;
		* )	usage
			exit 1
	esac
done
